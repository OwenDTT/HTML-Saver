{
  "manifest_version": 2,
  "name": "HTML Saver",
  "version": "1.0",
  "description": "Save the content of a webpage as an HTML file.",
  "permissions": [
    "activeTab",
    "downloads",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "background": {
    "scripts": [ "extension.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Save HTML Content",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
